@using BookStore.ViewModel
@model AutherFormVM

@section title {
	Auther
}
@section subTitle {
    @(Model?.Id == null ? "Create" : "edit")
}

<form asp-controller="Authers">
    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input type="text" class="form-control" asp-for="Name">
        <span asp-validation-for="Name"></span>
    </div>

    <button type="submit" class="btn btn-primary">@(Model?.Id == null ? "Add" : "update")</button>
</form>

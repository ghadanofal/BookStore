@model List<Category>

@section title{
	categories
}
@section subTitle{
	show
}
@section Button{
	<a class="btn btn-primary" asp-controller="Categories" asp-action="Create">Create</a>
}
<div class="card-body">
	@if(!Model.Any()){
	<div class="alert alert-warning alert-dismissible">
		<button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
		<h5><i class="icon fas fa-exclamation-triangle"></i> Alert!</h5>
		Warning alert preview. This alert is dismissable.
	</div>
	}
	else{
	<table class="table table-bordered">
		<thead>
			<tr>
				<th style="width: 10px">#</th>
				<th>Name</th>
				<th>Actions</th>
				

			</tr>
		</thead>
		<tbody>

			@foreach (var item in Model)
			{
				<tr>
					<td>@item.Id</td>
					<td>@item.Name</td>
					<td>
							<a asp-controller="Categories" asp-action="Edit" asp-route-id="@item.Id" class=" btn btn-info">Edit</a>
							<a asp-controller="Categories" asp-action="Delete" asp-route-id="@item.Id" class=" btn btn-danger">Delete</a>
					</td>
					
				</tr>
			}
		</tbody>
	</table>
	}
	
</div>